<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="001-create-roles-table" author="yoesoff">
        <createTable tableName="roles">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="roles" indexName="idx_roles_name">
            <column name="name"/>
        </createIndex>

        <sql>
            CREATE TRIGGER roles_before_insert
                BEFORE INSERT ON roles
                FOR EACH ROW
                SET NEW.created_at = UNIX_TIMESTAMP(NOW(6)) * 1000000,
                    NEW.updated_at = UNIX_TIMESTAMP(NOW(6)) * 1000000;
        </sql>
        <sql>
            CREATE TRIGGER roles_before_update
                BEFORE UPDATE ON roles
                FOR EACH ROW
                SET NEW.updated_at = UNIX_TIMESTAMP(NOW(6)) * 1000000;
        </sql>

        <rollback>
            <dropTable tableName="roles"/>
        </rollback>
    </changeSet>

    <changeSet id="002-seed-roles" author="yoesoff">
        <comment>Insert sample roles for testing</comment>
        <insert tableName="roles">
            <column name="name" value="ADMIN"/>
            <column name="created_at" valueNumeric="1475820997000000"/>
            <column name="updated_at" valueNumeric="1475820997000000"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="USER"/>
            <column name="created_at" valueNumeric="1475820998000000"/>
            <column name="updated_at" valueNumeric="1475820998000000"/>
        </insert>
        <rollback>
            <delete tableName="roles">
                <where>name IN ('ADMIN', 'USER')</where>
            </delete>
        </rollback>
    </changeSet>
</databaseChangeLog>
